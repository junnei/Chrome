{
  "name": "Time Checker Popup",
  "description": "Time Checker",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": ["https://*/", "alarms", "notifications", "storage", "tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Time Check Event",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "drink_water16.png",
    "32": "drink_water32.png",
    "48": "drink_water48.png",
    "128": "drink_water128.png"
  },
  "content_security_policy": "script-src 'self' *; object-src 'self'",
  "content_scripts": [{
    "js": ["jquery.min.js", "clock.js"],
    "matches": ["http://*/*", "https://*/*"]
  }]
}
